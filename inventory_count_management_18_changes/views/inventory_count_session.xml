<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


    <record id="invintory_count_session_form_changes"  model="ir.ui.view">
        <field name="name">invintory.count.session.form.changes</field>
        <field name="model">setu.inventory.count.session</field>
        <field name="inherit_id" ref="setu_inventory_count_management_18.inventory_count_session_form_view"/>
        <field name="arch" type="xml">



            <xpath expr="//header" position="inside">

             <button class="startscanclass" name="%(action_start_scanning)d" type="action" string="Start Scan" 
                  />
<!-- invisible = "not use_barcode_scanner or state !='In Progress' or current_state =='Pause'" -->
            </xpath> 





<xpath expr="//field[@name='session_line_ids']//field[@name='location_id']" position="replace">
         <field name="location_id"  required="0" force_save="1" />

            </xpath> 



<xpath expr="//field[@name='session_line_ids']//field[@name='scanned_qty']" position="replace">
            <field name="scanned_qty" string="Counted Qty" force_save="1" readonly="parent.current_state in ['Created','Pause','End']  or  product_scanned or not product_id or not location_id"    sum="Total Counted Qty"   />
            </xpath> 






        </field>
    </record>



    </data>
</odoo>
