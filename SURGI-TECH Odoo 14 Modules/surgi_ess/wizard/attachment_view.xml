<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_employees_profile_attachment_wizard" model="ir.ui.view">
            <field name="name">view.employee.profile.attachment.wizard</field>
            <field name="model">employee.profile.attachment.wizard</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group>
                            <group>
                                <field name="attachment" filename="file_name"/>
                                <field name="file_name" invisible="1"/>

                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Confirm" name="submit_attachment" class="btn-primary" type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>