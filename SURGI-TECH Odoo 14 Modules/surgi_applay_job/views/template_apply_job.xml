<odoo>
    <data>


        <template id="apply_job_edit_data" name="edit_apply_job" inherit_id="website_hr_recruitment.apply">
            <xpath expr="//form[@id='hr_recruitment_form']//div[3]" position="after">
                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="partner_national_id">
                            <span class="s_website_form_label_content">Your Mobile</span>
                            <span class="s_website_form_mark">*</span>
                        </label>
                        <div class="col-sm">
                            <input id="partner_mobile" type='text' class="form-control s_website_form_input"
                                   name="partner_mobile" required=""/>
                        </div>
                    </div>
                </div>
                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="partner_national_id">
                            <span class="s_website_form_label_content">Your National ID</span>
                            <span class="s_website_form_mark">*</span>
                        </label>
                        <div class="col-sm">
                            <input id="partner_national_id" type='text' class="form-control s_website_form_input"
                                   name="partner_national_id" required=""/>
                        </div>
                    </div>
                </div>
                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="address">
                            <span class="s_website_form_label_content">Your Address</span>
                            <span class="s_website_form_mark">*</span>
                        </label>
                        <div class="col-sm">
                            <input id="address" type='text' class="form-control s_website_form_input"
                                   name="address" required=""/>
                        </div>
                    </div>
                </div>
                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="age">
                            <span class="s_website_form_label_content">Your Age</span>
                            <span class="s_website_form_mark">*</span>
                        </label>
                        <div class="col-sm">
                            <input id="age" type='text' class="form-control s_website_form_input"
                                   name="age" required=""/>
                        </div>
                    </div>
                </div>
                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="gender">
                            <span class="s_website_form_label_content">Gender</span>
                            <span class="s_website_form_mark">*</span>
                        </label>
                        <div class="col-lg-7 col-md-8">
                            <select id="gender" class="form-control" name="gender" required="">
                                <option t-attf-value="Male">Male</option>
                                <option t-attf-value="Female">Female</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char"
                     data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="nominee">
                            <span class="s_website_form_label_content">Nominee</span>
                        </label>
                        <div class="col-sm">
                            <input id="nominee" type='text' class="form-control s_website_form_input"
                                   name="nominee"/>
                        </div>
                    </div>
                </div>

            </xpath>
            <xpath expr="//form[@id='hr_recruitment_form']//div[8]" position="after">
                <div class="form-group col-12 s_website_form_field" data-type="text" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="training_courses">
                            <span class="s_website_form_label_content">Training Courses</span>
                        </label>
                        <div class="col-sm">
                            <textarea id="training_courses" class="form-control s_website_form_input"
                                      name="training_courses"></textarea>
                        </div>
                    </div>
                </div>
                <div class="form-group col-12 s_website_form_field" data-type="text" data-name="Field">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px"
                               for="qualification">
                            <span class="s_website_form_label_content">Qualification</span>
                        </label>
                        <div class="col-sm">
                            <textarea id="qualification" class="form-control s_website_form_input"
                                      name="qualification"></textarea>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//form[@id='hr_recruitment_form']//div[11]" position="after">
                <div class="form-group col-12 s_website_form_field">
                    <h4 class="text-center">
                        <span>Previous Experiences</span>
                    </h4>
                </div>
                <div class="row pt16">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-3 text-right">
                            <label class="s_website_form_label_content" for="company_name1">Company</label>
                        </div>
                        <div class="col-sm">
                            <input name="company_name1" class="form-control s_website_form_input"
                                   type="text"/>
                        </div>
                    </div>
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-3 text-right">
                            <label class="s_website_form_label_content" for="date_from1">Date from</label>
                        </div>
                        <div>
                            <input name="date_from1" class="form-control o_website_form_input" type="date"
                                   data-date-format="YYYY-MM-DD"/>
                        </div>
                    </div>
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-3 text-right">
                            <label class="s_website_form_label_content" for="date_to1">Date to</label>
                        </div>
                        <div>
                            <input name="date_to1" class="form-control o_website_form_input" type="date"
                                   data-date-format="YYYY-MM-DD"/>
                        </div>
                    </div>
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-4 text-right">
                            <label class="s_website_form_label_content" for="job_position1">Job Position</label>
                        </div>
                        <div>
                            <input name="job_position1" class="form-control o_website_form_input"
                                   type="text"/>
                        </div>
                    </div>
                </div>
                <div class="row pt16">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-3 text-right">
                            <label class="s_website_form_label_content" for="company_name2">Company</label>
                        </div>
                        <div class="col-sm">
                            <input name="company_name2" class="form-control s_website_form_input"
                                   type="text"/>
                        </div>
                    </div>
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-3 text-right">
                            <label class="s_website_form_label_content" for="date_from2">Date from</label>
                        </div>
                        <div>
                            <input name="date_from2" class="form-control o_website_form_input" type="date"
                                   data-date-format="YYYY-MM-DD"/>
                        </div>
                    </div>
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-3 text-right">
                            <label class="s_website_form_label_content" for="date_to2">Date to</label>
                        </div>
                        <div>
                            <input name="date_to2" class="form-control o_website_form_input" type="date"
                                   data-date-format="YYYY-MM-DD"/>
                        </div>
                    </div>
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-4 text-right">
                            <label class="s_website_form_label_content" for="job_position2">Job Position</label>
                        </div>
                        <div>
                            <input name="job_position2" class="form-control o_website_form_input"
                                   type="text"/>
                        </div>
                    </div>
                </div>
                <div class="row pt16">
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-3 text-right">
                            <label class="s_website_form_label_content" for="company_name3">Company</label>
                        </div>
                        <div class="col-sm">
                            <input name="company_name3" class="form-control s_website_form_input"
                                   type="text"/>
                        </div>
                    </div>
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-3 text-right">
                            <label class="s_website_form_label_content" for="date_from3">Date from</label>
                        </div>
                        <div>
                            <input name="date_from3" class="form-control o_website_form_input" type="date"
                                   data-date-format="YYYY-MM-DD"/>
                        </div>
                    </div>
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-3 text-right">
                            <label class="s_website_form_label_content" for="date_to3">Date to</label>
                        </div>
                        <div>
                            <input name="date_to3" class="form-control o_website_form_input" type="date"
                                   data-date-format="YYYY-MM-DD"/>
                        </div>
                    </div>
                    <div class="row s_col_no_resize s_col_no_bgcolor">
                        <div class="col-lg-4 text-right">
                            <label class="s_website_form_label_content" for="job_position3">Job Position</label>
                        </div>
                        <div>
                            <input name="job_position3" class="form-control o_website_form_input"
                                   type="text"/>
                        </div>
                    </div>
                </div>
            </xpath>


        </template>

        <function model="ir.model.fields" name="formbuilder_whitelist">
            <value>hr.applicant</value>
            <value eval="[
                'description',
                'email_from',
                'partner_national_id',
                'address',
                'qualification',
                'training_courses',
                'age',
                'nominee',
                'gender',
                'partner_name',
                'partner_phone',
                'partner_mobile',
                'job_id',
                'department_id',
                'company_name1',
                'date_from1',
                'date_to1',
                'job_position1',
                'company_name2',
                'date_from2',
                'date_to2',
                'job_position2',
                'company_name3',
                'date_from3',
                'date_to3',
                'job_position3',
            ]"/>
        </function>


    </data>
</odoo>