<odoo>
    <data>
        <record id="hr_department_overtime_budget" model="ir.ui.view">
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Overtime Budget">
                            <group>
                                <field name="overtime_budget"/>
                            </group>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>