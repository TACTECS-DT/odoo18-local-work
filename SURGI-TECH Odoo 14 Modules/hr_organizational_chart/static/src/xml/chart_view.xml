<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrganizationalEmployeeChart">
        <div id="o_organizational_chart">
            <div class="row o_org_chart_title mb16 mt0">
                <div class="col-md-4">

                    <div class="row">
                        <div class="col-md-6">
                            <select name="departments" class="form-control  " id="departments">
                                <option value=''>Organization</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <select name="locations" class="form-control" id="locations">
                                <option value=''>All Locations</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 col-md-offset-2">
                    <h4 align="center">
                        <span id="charttitle">Organization</span> Chart</h4>
                </div>
                <div class="col-md-4">
                <button name="print_tree" id="print_tree">Print</button>
                <button name="zoom_in" id="zoom_in">Zoom In</button>
                <button name="zoom_reset" id="zoom_reset">Reset</button>
                <button name="zoom_out" id="zoom_out">Zoom Out</button>
                </div>
            
            </div>
            <center>
                <div id="o_parent_employee" class="empchart">

                </div>
            </center>
        </div>


 

</t>

</templates>

