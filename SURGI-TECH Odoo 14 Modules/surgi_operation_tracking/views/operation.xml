<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="operation_operation_recon_inherit" model="ir.ui.view">
            <field name="name">operation.operation.recon.inherit</field>
            <field name="model">operation.operation</field>
            <field name="inherit_id" ref="surgi_operation.recon_operations_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">

                    <button string="Start Operation" name="action_start_operation_date" type="object"
                attrs="{'invisible': [('started_op', '=', True)]}"
                           />

                    <button string="End Operation" name="action_end_operation_date" type="object"
                            attrs="{'invisible': [('ended_op', '=', True)]}"

                           />

                </xpath>
                <xpath expr="//field[@name='emp_confirm']" position="after">

                   <field name="started_op_date" />
                   <field name="ended_op_date" />
                   <field name="started_op" invisible="1"/>
                   <field name="ended_op" invisible="1"/>


                </xpath>

                </field>


                </record>

