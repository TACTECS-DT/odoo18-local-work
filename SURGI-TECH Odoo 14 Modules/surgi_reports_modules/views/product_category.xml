<odoo>
    <data>


        <record id="form_product_category_inherit_form" model="ir.ui.view">
            <field name="name">name.product.category.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='first']" position="after">
                    <group name="second" col="2">
                            <field name="product_line_id" class="oe_inline"/>
                        </group>
                </xpath>



            </field>
        </record>

    </data>
</odoo>