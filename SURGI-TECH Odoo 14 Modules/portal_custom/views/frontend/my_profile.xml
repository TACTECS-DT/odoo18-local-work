<odoo>


    <template id="my_profile" name="My Portal Profile">
        <t t-call="portal.portal_layout">

            <style>
                body {
                    background-color: #f2f6fc;
                    color: #69707a;
                }

                .img-account-profile {
                    height: 10rem;
                }

                .rounded-circle {
                    border-radius: 50% !important;
                }

                .card {
                    box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);
                }

                .card .card-header {
                    font-weight: 500;
                }

                .card-header:first-child {
                    border-radius: 0.35rem 0.35rem 0 0;
                }

                .card-header {
                    padding: 1rem 1.35rem;
                    margin-bottom: 0;
                    background-color: rgba(33, 40, 50, 0.03);
                    border-bottom: 1px solid rgba(33, 40, 50, 0.125);
                }

                .form-control, .dataTable-input {
                    display: block;
                    width: 100%;
                    font-size: 0.875rem;
                    font-weight: 400;
                    color: #69707a;
                    background-color: #fff;
                    background-clip: padding-box;
                    border: 1px solid #c5ccd6;
                    -webkit-appearance: none;
                    -moz-appearance: none;
                    appearance: none;
                    border-radius: 0.35rem;
                    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
                }

                .nav-borders .nav-link.active {
                    color: #0061f2;
                    border-bottom-color: #0061f2;
                }

                .nav-borders .nav-link {
                    color: #69707a;
                    border-bottom-width: 0.125rem;
                    border-bottom-style: solid;
                    border-bottom-color: transparent;
                    padding-top: 0.5rem;
                    padding-bottom: 0.5rem;
                    padding-left: 0;
                    padding-right: 0;
                    margin-left: 1rem;
                    margin-right: 1rem;
                }

                .employee-section h6 {
                    font-size: 1.2rem;

                }

                .employee-section .detail {
                    padding: 10px 0;
                    font-size: 1rem;
                }

                .employee-section .label {
                    color: #34495e;
                    font-weight: bold;
                    margin-right: 5px;
                }

                @media only screen and (max-width: 768px) {
                    .employee-section h6 {
                        font-size: 1rem;
                    }

                    .employee-section .detail {
                        padding: 5px 0;
                        font-size: 0.85rem;
                    }
                }

                .profile-section .section {
                    border: 1px solid #eaeaea;
                    margin-bottom: 20px;
                    padding: 15px;
                    border-radius: 5px;
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
                }

                .profile-section h6 {
                    font-size: 1.1rem;
                    color: #333;
                    border-bottom: 2px solid #3498db;
                    margin-bottom: 10px;
                    padding-bottom: 5px;
                }

                .profile-section .info {
                    margin-bottom: 10px;
                    color: #555;
                }

                .profile-section .info span {
                    color: #2c3e50;
                }

                @media only screen and (max-width: 768px) {
                    .profile-section .section {
                        padding: 10px;
                    }

                    .profile-section h6 {
                        font-size: 1rem;
                    }

                    .profile-section .info {
                        font-size: 0.85rem;
                    }
                }

                .profile-section .section {
                    padding: 20px;
                    border: 1px solid #e5e5e5;
                    border-radius: 5px;
                    margin-bottom: 20px;
                }

                .profile-section .info {
                    font-size: 14px;
                    margin: 10px 0;
                    color: #555;
                }

                .profile-section .text-primary {
                    font-weight: bold;
                    color: #007bff;
                }

                .profile-card {
                    border: 1px solid #dee2e6;
                    border-radius: 10px;
                    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                }

                .profile-header {
                    font-size: 1.2rem;
                    font-weight: bold;
                    background-color: #f0f1f6;
                    color: #333;
                }

                .img-account-profile {
                    width: 128px;
                    height: 128px;
                    border: 3px solid #f0f1f6;
                }

                .profile-username {
                    font-weight: bold;
                    color: #333;
                }

                .small {
                    font-size: 0.8rem;
                }

            </style>
            <br/>
            <br/>
            <div class="row" style="font-weight:bold;">
                <div class="col-xl-4">
                    <div class="card profile-card mb-4 mb-xl-0">
                        <div class="card-header profile-header text-primary">Profile Picture</div>
                        <div class="card-body text-center">
                            <img class="img-account-profile rounded-circle mb-2"
                                 t-att-src="'/web/image?model=hr.employee&amp;id=%s&amp;field=image_128' % user_id.employee_id.id"
                                 alt=""/>
                            <div class="small font-italic text-muted mb-4"></div>
                            <h3 class="profile-username" id="inputUsername">
                                <span class="text-bold text-dark"
                                      t-esc="user_id.employee_id.name[:23] + '...' if user_id.name and len(user_id.employee_id.name) &gt; 25 else user_id.employee_id.name"/>
                            </h3>
                        </div>
                    </div>
                </div>

                <div class="col-xl-8">
                    <div class="card mb-4">
                        <div class="card card-primary card-tabs">
                            <div class="card-body">
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general"
                                           role="tab" aria-controls="general" aria-selected="true">General</a>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link" id="work-tab" data-toggle="tab" href="#work"
                                           role="tab" aria-controls="work" aria-selected="false">Work Information</a>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link" id="private-tab" data-toggle="tab" href="#private"
                                           role="tab" aria-controls="private" aria-selected="false">Private
                                            Information</a>
                                    </li>

                                    <li class="nav-item" role="presentation">
                                        <a class="nav-link" id="scholarship-tab" data-toggle="tab" href="#scholarship"
                                           role="tab" aria-controls="scholarship" aria-selected="false">Scholarship</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="general" role="tabpanel"
                                         aria-labelledby="general-tab">
                                        <br/>
                                        <div class="card-body">
                                            <div class="row profile-section">
                                                <div class="col-md-6">
                                                    <div class="section">
                                                        <h6 class="text-primary">Work Details</h6>
                                                        <div class="info">Department: <span
                                                                t-field="emp.department_id"/></div>
                                                        <div class="info">Manager: <span t-field="emp.parent_id"/></div>
                                                        <div class="info">Coach: <span t-field="emp.coach_id"/></div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="section">
                                                        <h6 class="text-primary">Contact Information</h6>
                                                        <div class="info">Work Email: <span
                                                                t-esc="emp.work_email"/></div>
                                                        <div class="info">Work Mobile: <span
                                                                t-esc="emp.mobile_phone"/></div>
                                                        <div class="info">Work Phone: <span
                                                                t-esc="emp.work_phone"/></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="work" role="tabpanel" aria-labelledby="work-tab">
                                        <br/>
                                        <div class="row profile-section employee-section">
                                            <div class="col-md-6 location">
                                                <div class="section">
                                                    <h6 class="text-primary">Location</h6>
                                                    <div class="detail">
                                                        <span class="label">Work Address:</span>
                                                        <span t-field="emp.address_id"/>
                                                    </div>
                                                    <div class="detail">
                                                        <span class="label">Work Location:</span>
                                                        <span t-field="emp.work_location"/>
                                                    </div>
                                                    <div class="detail">
                                                        <span class="label">Job Position:</span>
                                                        <span t-field="emp.job_id"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 approvers">
                                                <div class="section">
                                                    <h6 class="text-primary">Approvers</h6>
                                                    <div class="detail">
                                                        <span class="label">Time Off:</span>
                                                        <span t-field="emp.leave_manager_id"/>
                                                    </div>
                                                    <h6 class="text-primary">Schedule</h6>
                                                    <div class="detail">
                                                        <span class="label">Working Hours:</span>
                                                        <span t-field="emp.resource_calendar_id"/>
                                                    </div>
                                                    <div class="detail">
                                                        <span class="label">Timezone:</span>
                                                        <span t-field="emp.tz"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="private" role="tabpanel"
                                         aria-labelledby="private-tab">
                                        <br/>
                                        <div class="row profile-section">
                                            <div class="col-md-6">
                                                <div class="section">
                                                    <h6 class="text-primary">Private Contact</h6>
                                                    <div class="info">Address: <span
                                                            t-field="emp.address_home_id"/></div>
                                                    <div class="info">Email: <span t-field="emp.private_email"/></div>
                                                    <div class="info">Phone: <span t-field="emp.phone"/></div>
                                                    <div class="info">Bank Account Number: <span
                                                            t-field="emp.bank_account_id"/></div>
                                                    <div class="info">Home-Work Distance: <span
                                                            t-field="emp.km_home_work"/><span><b>Km</b></span></div>
                                                    <h6 class="text-primary">Marital Status</h6>
                                                    <div class="info">Marital Status: <span
                                                            t-field="emp.marital"/></div>
                                                    <h6 class="text-primary">Emergency</h6>
                                                    <div class="info">Emergency Contact: <span
                                                            t-field="emp.emergency_contact"/></div>
                                                    <div class="info">Emergency Phone: <span
                                                            t-field="emp.emergency_phone"/></div>
                                                    <h6 class="text-primary">Education</h6>
                                                    <div class="info">Certificate Level: <span
                                                            t-field="emp.certificate"/></div>
                                                    <div class="info">Field of Study: <span
                                                            t-field="emp.study_field"/></div>
                                                    <div class="info">School: <span t-field="emp.study_school"/></div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="section">
                                                    <h6 class="text-primary">Citizenship</h6>
                                                    <div class="info">Nationality (Country): <span
                                                            t-field="emp.country_id"/></div>
                                                    <div class="info">Identification No: <span
                                                            t-field="emp.identification_id"/></div>
                                                    <div class="info">Passport No: <span
                                                            t-field="emp.passport_id"/></div>
                                                    <div class="info">Gender: <span t-field="emp.gender"/></div>
                                                    <div class="info">Date of Birth: <span
                                                            t-field="emp.birthday"/></div>
                                                    <div class="info">Place of Birth: <span
                                                            t-field="emp.place_of_birth"/></div>
                                                    <div class="info">Country of Birth: <span
                                                            t-field="emp.country_of_birth"/></div>
                                                    <h6 class="text-primary">Dependant</h6>
                                                    <div class="info">Number of Children: <span
                                                            t-field="emp.children"/></div>
                                                    <h6 class="text-primary">Work Permit</h6>
                                                    <div class="info">Visa No: <span t-field="emp.visa_no"/></div>
                                                    <div class="info">Work Permit No: <span
                                                            t-field="emp.permit_no"/></div>
                                                    <div class="info">Visa Expire Date: <span
                                                            t-field="emp.visa_expire"/></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="scholarship" role="tabpanel"
                                         aria-labelledby="scholarship-tab">
                                        <br/>
                                        <div class="card-body">
                                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                                    data-target="#addScholarshipModal">
                                                Add Scholarship
                                            </button>
                                            <br/>
                                            <br/>
                                            <br/>
                                            <div class="table-responsive">
                                                <table class="table table-bordered"
                                                       style="table-layout: fixed;width: 100%" width="100%">
                                                    <thead class="thead-light">
                                                        <tr>
                                                            <th>أسم الابن</th>
                                                            <th>النوع</th>
                                                            <th>المرحلة الدراسية</th>
                                                            <th>نوع المدرسة </th>
                                                            <th>السنة الدراسية</th>
                                                            <th>نسبة النجاح</th>
                                                            <th>السن</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <t t-foreach="scholarships" t-as="scholarship">
                                                            <tr>
                                                                <td><span
                                                                        t-esc="scholarship.emp_scholarship_name"/></td>
                                                                <td><span
                                                                        t-esc="scholarship.emp_family_gender"/></td>
                                                                <td><span t-esc="scholarship.school_stage.name"/></td>
                                                                <td><span t-field="scholarship.school_type"/></td>
                                                                <td><span t-field="scholarship.school_year"/></td>
                                                                <td><span
                                                                        t-esc="scholarship.school_percentage"/></td>
                                                                <td><span
                                                                        t-esc="scholarship.relation_age"/></td>

                                                                <td>
                                                                    <button type="button" class="btn btn-warning"
                                                                            data-toggle="modal"
                                                                            t-att-data-target="'#editScholarshipModal%s' % scholarship.id">
                                                                        <i class="fa fa-edit"/>
                                                                    </button>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Add Scholarship Modal -->
            <div class="modal fade" id="addScholarshipModal" tabindex="-1" role="dialog"
                 aria-labelledby="addScholarshipModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addScholarshipModalLabel">Add Scholarship</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&amp;times;</span>
                            </button>
                        </div>
                        <form class="new_scholarship_form">
                            <div class="modal-body">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="emp_scholarship_name">أسم الابن</label>
                                        <input type="text" class="form-control emp_scholarship_name"
                                               name="emp_scholarship_name" required="True"/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="employee_relation">النوع</label>
                                        <select class="form-control employee_relation" name="employee_relation"
                                                required="True">
                                            <option selected="selected" disabled="disabled" value=""/>

                                            <option value="sons">ابن</option>
                                            <option value="daughters">أبنة</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="bdate">تاريخ الميلاد</label>
                                        <input type="date" class="form-control bdate" name="bdate" required="True"/>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="school_type">نوع المدرسة</label>
                                        <select class="form-control school_type" name="school_type" required="True">
                                            <option selected="selected" disabled="disabled" value=""/>

                                            <option value="ar">عربي</option>
                                            <option value="gr">ألماني</option>
                                            <option value="fr">فرنساوي</option>
                                            <option value="en">انجليزي</option>
                                            <option value="co">تجاري</option>
                                            <option value="de">تجريبي</option>
                                            <option value="cr">صنايع</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="school_stage">المرحلة الدراسية</label>
                                        <select class="form-control school_stage" name="school_stage" required="True">
                                            <t t-foreach="scholarships_stage" t-as="stage">
                                                <option t-att-value="stage.id" t-esc="stage.name"/>
                                            </t>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="school_year">السنة الدراسية</label>
                                        <select class="form-control school_year" name="school_year" required="True">
                                            <option selected="selected" disabled="disabled" value=""/>

                                            <option value="one">1</option>
                                            <option value="two">2</option>
                                            <option value="three">3</option>
                                            <option value="four">4</option>
                                            <option value="five">5</option>
                                            <option value="six">6</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="school_percentage">نسبة النجاح لأخر مرحلة دارسية</label>
                                        <input type="text" class="form-control school_percentage"
                                               name="school_percentage" required="True"/>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="attachment_brith">شهادة الميلاد</label>
                                        <input type="file" class="form-control attachment_brith" name="attachment_brith"
                                        />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="attachment_grade">شهادة اخر مرحلة</label>
                                        <input type="file" class="form-control attachment_grade" name="attachment_grade"
                                        />
                                    </div>
                                    <div class="form-group col-md-12">
                                        <label for="attachment_other">اخري</label>
                                        <input type="file" class="form-control attachment_other"
                                               name="attachment_other"/>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary new_scholarship_confirm">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Edit Scholarship Modal -->
            <!-- Edit Scholarship Modal -->
            <t t-foreach="scholarships" t-as="scholarship">
                <div class="modal fade" t-att-id="'editScholarshipModal%s' % scholarship.id" tabindex="-1" role="dialog"
                     aria-labelledby="editScholarshipModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" t-att-id="'editScholarshipModalLabel%s' % scholarship.id">Edit
                                    Scholarship</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&amp;times;</span>
                                </button>
                            </div>
                            <form t-att-id="'edit_scholarship_form%s' % scholarship.id" class="edit_scholarship_form">
                                <div class="modal-body">
                                    <input type="hidden" class="scholarship_id" t-att-value="scholarship.id"/>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="emp_scholarship_name">أسم الابن</label>
                                            <input type="text" class="form-control emp_scholarship_name"
                                                   name="emp_scholarship_name"
                                                   t-att-value="scholarship.emp_scholarship_name" required="True"/>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="employee_relation">النوع</label>
                                            <select class="form-control employee_relation" name="employee_relation"
                                                    required="True">
                                                <option value="sons"
                                                        t-att-selected="scholarship.employee_relation == 'sons'">
                                                    ابن</option>
                                                <option value="daughters"
                                                        t-att-selected="scholarship.employee_relation == 'daughters'">
                                                    أبنة</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="bdate">تاريخ الميلاد</label>
                                            <input type="date" class="form-control bdate" name="bdate"
                                                   t-att-value="scholarship.bdate" required="True"/>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="school_type">نوع المدرسة</label>
                                            <select class="form-control school_type" name="school_type" required="True">
                                                <option value="ar" t-att-selected="scholarship.school_type == 'ar'">
                                                    عربي</option>
                                                <option value="gr" t-att-selected="scholarship.school_type == 'gr'">
                                                    ألماني</option>
                                                <option value="fr" t-att-selected="scholarship.school_type == 'fr'">
                                                    فرنساوي</option>
                                                <option value="en" t-att-selected="scholarship.school_type == 'en'">
                                                    انجليزي</option>
                                                <option value="co" t-att-selected="scholarship.school_type == 'co'">
                                                    تجاري</option>
                                                <option value="de" t-att-selected="scholarship.school_type == 'de'">
                                                    تجريبي</option>
                                                <option value="cr" t-att-selected="scholarship.school_type == 'cr'">
                                                    صنايع</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="school_stage">المرحلة الدراسية</label>
                                            <select class="form-control school_stage" name="school_stage"
                                                    required="True">
                                                <t t-foreach="scholarships_stage" t-as="stage">
                                                    <option t-att-value="stage.id"
                                                            t-att-selected="scholarship.school_stage.id == stage.id"
                                                            t-esc="stage.name"/>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="school_year">السنة الدراسية</label>
                                            <select class="form-control school_year" name="school_year" required="True">
                                                <option value="one" t-att-selected="scholarship.school_year == 'one'">
                                                    1</option>
                                                <option value="two" t-att-selected="scholarship.school_year == 'two'">
                                                    2</option>
                                                <option value="three"
                                                        t-att-selected="scholarship.school_year == 'three'">3</option>
                                                <option value="four" t-att-selected="scholarship.school_year == 'four'">
                                                    4</option>
                                                <option value="five" t-att-selected="scholarship.school_year == 'five'">
                                                    5</option>
                                                <option value="six" t-att-selected="scholarship.school_year == 'six'">
                                                    6</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="school_percentage">نسبة النجاح لأخر مرحلة دارسية</label>
                                            <input type="text" class="form-control school_percentage"
